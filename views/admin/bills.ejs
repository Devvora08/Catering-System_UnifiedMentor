<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Bills</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        .bill-container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .bill-header {
            text-align: left;
            margin-bottom: 15px;
        }
        .bill-header h2 {
            margin: 5px 0;
            font-size: 1.2em;
            color: #333;
        }
        .bill-info {
            display: flex;
            justify-content: space-between;
            font-size: 0.9em;
            color: #666;
            border-bottom: 1px solid #ddd;
            padding-bottom: 8px;
            margin-bottom: 15px;
        }
        .bill-info .user-details {
            display: flex;
            flex-direction: column;
        }
        .itemized-list {
            list-style-type: none;
            padding: 0;
            font-size: 1em;
        }
        .itemized-list li {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }
        .itemized-list li:last-child {
            border-bottom: none;
        }
        .total-section {
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            font-size: 1.1em;
            padding: 12px 0;
            margin-top: 10px;
            border-top: 2px solid #ddd;
        }
    </style>
</head>
<body>
    <h1>User Bills</h1>

    <% userBills.forEach(bill => { %>
        <div class="bill-container">
            <!-- Bill Header -->
            <div class="bill-header">
                <h2>User Bill</h2>
            </div>

            <!-- User Info -->
            <div class="bill-info">
                <div class="user-details">
                    <div>User: <strong><%= bill.user.name %></strong></div>
                    <div>Email: <%= bill.user.email %></div>
                    <div>Phone: <%= bill.user.phone %></div>
                </div>
            </div>

            <!-- Itemized Bill -->
            <ul class="itemized-list">
                <li>
                    <span>Regular Orders Total</span>
                    <span>₹<%= bill.orderTotal.toFixed(2) %></span>
                </li>
                <li>
                    <span>Thali Orders Total</span>
                    <span>₹<%= bill.thaliOrderTotal.toFixed(2) %></span>
                </li>
            </ul>

            <!-- Total Amount Due -->
            <div class="total-section">
                <span>Total Amount Due</span>
                <span>₹<%= bill.totalBill.toFixed(2) %></span>
            </div>
        </div>
    <% }) %>
</body>
</html>
