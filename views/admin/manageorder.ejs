<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Orders</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .order-container {
            border: 1px solid #ddd;
            border-radius: 8px;
            margin: 20px 0;
            padding: 15px;
            background-color: #f9f9f9;
        }
        .order-header, .order-items, .order-summary, .order-actions {
            margin-bottom: 10px;
        }
        .order-header {
            display: flex;
            justify-content: space-between;
        }
        .order-id, .order-user {
            font-weight: bold;
        }
        .item-list {
            list-style: none;
            padding: 0;
        }
        .item-list li {
            margin-bottom: 5px;
        }
        .status-confirmed {
            color: green;
        }
        .status-pending {
            color: orange;
        }
        .delete-button {
            color: red;
            cursor: pointer;
            border: none;
            background: none;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <h1>Order Management</h1>

    <% orders.forEach(order => { %>
        <div class="order-container">
            <!-- Order Header -->
            <div class="order-header">
                <div class="order-id">Order ID: <%= order._id %></div>
                <div class="order-user">User: <%= order.user.name %> (<%= order.user.email %>)</div>
            </div>

            <!-- Order Items -->
            <div class="order-items">
                <h3>Items</h3>
                <ul class="item-list">
                    <% order.items.forEach(item => { %>
                        <li>
                            <strong>Name:</strong> <%= item.foodItem.name %> | 
                            <strong>Quantity:</strong> <%= item.quantity %>
                        </li>
                    <% }) %>
                </ul>
            </div>

            <!-- Special Preferences -->
            <div class="order-preferences">
                <h3>Special Instructions</h3>
                <p>
                    <% if (order.specialInstructions) { %>
                        <%= order.specialInstructions %>
                    <% } else { %>
                        None
                    <% } %>
                </p>
            </div>

            <!-- Order Summary -->
            <div class="order-summary">
                <p><strong>Total Quantity:</strong> 
                    <% const totalQuantity = order.items.reduce((sum, item) => sum + item.quantity, 0); %>
                    <%= totalQuantity %>
                </p>
                <p><strong>Total Price:</strong> â‚¹<%= order.totalBill %></p>
                <p><strong>Status:</strong> 
                    <span class="<%= order.status === 'confirmed' ? 'status-confirmed' : 'status-pending' %>">
                        <%= order.status %>
                    </span>
                </p>
            </div>

            <!-- Order Actions -->
            <div class="order-actions">
                <% if (order.status === 'pending') { %>
                    <form action="/admin/deleteOrder/<%= order._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="delete-button" onclick="return confirm('Are you sure you want to delete this pending order?');">Delete Pending Order</button>
                    </form>
                <% } %>
            </div>
        </div>
    <% }) %>
</body>
</html>
